.person
  .photo
    - if @boxer.photo_url.present?
      = image_tag(@boxer.photo_url)
  .info
    %h2= @boxer.full_name
    %dl
      - if @boxer.birth_date.present?
        %dt= t("birth_date")
        %dd= year_month_day(@boxer.birth_date)
      - if @boxer.weight.present?
        %dt= t("weight")
        %dd= t("boxer_weight", :weight => @boxer.weight)
  .about
    = markup(@boxer.about)
