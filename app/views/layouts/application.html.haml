!!! Strict
%html{html_attrs}
  %head
    %title KS „Cios Adamek”
    //%link{:rel=>"shortcut icon", :href=>"/images/ball.ico"}
    = stylesheet_link_tag "cios"
    = javascript_include_tag 'jquery', 'application'
  %body
    %div#header
      %h1= "KS „Cios Adamek”"
    %div#banner
    %div#wrapper
      %div#page
        %div.bgtop
          %div.bgbtm
            %div#content
              %h2="Zapraszamy na treningi we wtorki i czwartki"
              = flash_messages
              = yield
            %div#sidebar
              %ul
                %li
                  %h2= 'Menu'
                  %ul
                    %li= link_to "posts", posts_path
                    %li= link_to 'gallery', gallery_path
                    -if current_user
                      %li= link_to "Logout #{current_user.login}", user_session_path, :method => :delete
                      %li= link_to "Show profile", user_path (current_user)
                      %li= link_to "Edit profile", edit_user_path( current_user)
                      %li= link_to "Register", new_account_path
                    -else
                      %li= link_to "Login", new_user_session_path
                %li
                  %h2= "Sponsorzy"
                %li
                  %h2= "Współpraca"
                  =link_to "Tomasz Adamek", "http://www.tomaszadamek.com.pl", :popup => true
            %div.clearb
    %div#footer
      %p
        = "Design by"
        = link_to "Free CSS Templates", "http://www.freecsstemplates.org", :popup => true
