%hr
%p
  = h comment.content
  %br
  %br
  %span.post-footer
    =h comment.name.capitalize if comment.name
    %span.date= hour_minute( comment.created_at )
  %br
  %br
  - if current_user
    %br
    = link_to 'Edit', edit_comment_path(comment)
    = link_to 'Destroy', comment, :confirm => 'Are you sure?', :method => :delete
