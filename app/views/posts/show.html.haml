%h1.title= @post.title
%div.byline
  = t('Author')
  = @post.user.login.capitalize if @post.user
  = @post.created_at.strftime("%d.%m.%y %H:%M")
%div.post
  = markup(@post.content)
%br
%div#comments
  - unless @post.comments.approved.blank?
    %h2= t("Comments")+':'
    = render :partial => @post.comments.approved
%h2= t('Add')+' '+t('comment')+':'
= simple_form_for Comment.new(:post => @post) do |f|
  = f.input :post_id, :as => :hidden
  = f.input :name
  = f.input :content, :hint => "#{t ('You can use')} #{link_to "textile", "http://www.textism.com/tools/textile/"}".html_safe
  = f.button :submit, t("Add")
